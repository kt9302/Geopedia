<% provide(:title, "Search")%>
<h1>Geopedia</h1>

<div class="container">
  <div class="row">
    <div class="span3">
	</div>
	<div class="span8">
		<div class="input-group" >
    	<div class="form-inline" alin="center">
      <%= form_tag(location_search_path,method: "get" ) do %>
      <%= text_field_tag('location', params[:location], :size => 150, :placeholder=> "Enter city or zip code", :autofocus=>true) %> 
      <%= button_tag(type: "submit", class: "btn  btn-success ", id:"bu") do %>
       Search 
             <i class="icon-search"></i>
      <% end %>
    <% end %>
    </div>
</div>
</div>


<div class="row">
    
	<div class="span4">
	</div>
	<div class="span4">
    <% [:error, :alert].each do |level| %>
        <% unless flash[level].blank? %>
        <div data-alert="alert" class="alert alert-warning alert-dismissable" >
		<%= content_tag :p, flash[level] %>
        </div>
     <% end %>
	<% end %>
	<% unless flash[:notice].blank? %>
	<div data-alert="alert" class="alert alert-info alert-dismissable" >
	<%=flash[:notice] %>
	<% session[:location].places.each do |place| %>
		
		
		<% unless (place.tag=="missing_address"  || place.city==nil || place.state==nil ||place.city==nil) %>
		<p> <%= link_to (place.city+", "+place.state+", "+place.country),  location_search_path+"?utf8=âœ“&location="+place.city+", "+place.state+", "+place.country %> 
		<%end %>
	<%end %>
	</div>	
<%end%>
</div>
</div>
</div>












    

