<% provide(:title, 'Weather')%>
<h1><%="Weather in "+ session[:location].city+", "+ session[:location].state+", " +session[:location].country %> </h1>

<div>
<% session[:location].get_weather.each { |weather|%>
<%= weather['title'] %><p>
<%= image_tag(weather['icon_url'], :size => "20x20") %>
<%= weather['fcttext'] %><p>

<% } %>
</div>