<h1><%="Hiking places around "+ session[:location].city+", "+ session[:location].state+", " +session[:location].country%> </h1>

	<div class="container">
		
		<div class="container" id="big" align="center">


<div style='width: 800px;' >
  <div id="map" style='width: 800px; height: 400px; align: center;' ></div>
</div>
</div>

<% hash = Gmaps4rails.build_markers(session[:location].get_place_dining) do |place, marker| %>
 <% marker.lat place['geometry']['location']['lat'].to_f %>
 <% marker.lng place['geometry']['location']['lng'].to_f %>
 <% if place.has_key?('rating') %>
 	<% marker.infowindow place['name'].to_s+"   Rating:"+place['rating'].to_s %>
	<%end %>
<%end %>
<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  
});

</script>
</div>
	
	
	
	
	
	
	
	
	
